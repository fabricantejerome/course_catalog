{% extends "partials/template.twig" %}

{% block content %}
	<!-- Main content -->
	<section class="content logs-list">
		<div class="row">
			<div class="col-md-8">
				{{  session.flashdata.message|raw }}
				<!-- Default box -->
				<div class="box box-danger">
					<div class="box-body">
						<table id="example2" class="table table-bordered table-hover">
							<thead>
								<tr>
									<th></th>
									<th>Name</th>
									<th>User Type</th>
									<th>Activity</th>
									<th>Date Visited</th>
								</tr>
							</thead>

							<tbody>
								{% set i = 1 %}
								{% for entity in entities %}
									<tr>
										<td>{{ i }}</td>
										<td>{{ entity.name }}</td>
										<td>{{ entity.user_type }}</td>
										<td>{{ entity.activity }}</td>
										<td>{{ entity.date_created }}</td>
									</tr>
									{% set i = i + 1 %}
								{% endfor %}
							</tbody>
						</table>
					</div>
					<!-- /.box-body -->
				</div>
				<!-- /.box -->
			</div>
		</div>
	</section>
	<!-- /.content -->
{% endblock %}

{% block script %}
	{{ parent() }}
	<script>
		$(function () {
			$('#example2').DataTable({});
		});
	</script>
{% endblock %}