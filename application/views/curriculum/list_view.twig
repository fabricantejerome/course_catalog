{% extends 'partials/template.twig' %}

{% block content %}
	{# Main Content #}
	<section class="content curriculum-list">
		<div class="row">
			<div class="col-md-8">
				{{ session.flashdata.message|raw }}
				{# Default box #}
				<!-- Default box -->
				<div class="box box-danger">
					<div class="box-header with-border text-right">
						<a href="{{ base_url('curriculum/create/') }}">
							<button class="btn btn-danger btn-flat"><i class="fa fa-plus"></i> New Curriculum</button>
						</a>
					</div>
					<div class="box-body">
						<table id="example2" class="table table-bordered table-hover">
							<thead>
								<tr>
									<th>#</th>
									<th>Course Code</th>
									<th>Course Title</th>
									<th></th>
								</tr>
							</thead>

							<tbody>
								{% set i = 1 %}
								{% for entity in entities %}
									<tr>
										<td>{{ i }}</td>
										<td>{{ entity.code }}</td>
										<td>{{ entity.title }}</td>
										<td>
											<a href="{{ base_url('curriculum/edit/' ~ entity.id ) }}">
												<button class="btn btn-default"><i class="fa fa-search"></i></button>
											</a>

											<a href="{{ base_url('curriculum/delete/' ~ entity.id ) }}">
												<button class="btn btn-default"><i class="fa fa-times"></i></button>
											</a>
										</td>
									</tr>
									{% set i = i + 1 %}
								{% endfor %}
							</tbody>
						</table>
					</div>
					<!-- /.box-body -->
				</div>
				<!-- /.box -->
			</div>
		</div>
	</section>
{% endblock %}

{% block script %}
	{{ parent() }}
	<script type="text/javascript">
		$(function () {
			$('#example2').DataTable({});
		});
	</script>
{% endblock %}